# ================================================================
# ENVIRONMENT CONFIGURATION - PRODUCTION
# ================================================================

# Application Environment
EXPO_PUBLIC_ENVIRONMENT=production
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_production_supabase_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key

# OCR Configuration
EXPO_PUBLIC_OCR_MOCK_MODE=false
EXPO_PUBLIC_OCR_CONFIDENCE_THRESHOLD=0.7
EXPO_PUBLIC_OCR_PROCESSING_INTERVAL=300
EXPO_PUBLIC_OCR_MAX_RETRIES=3
EXPO_PUBLIC_OCR_TIMEOUT=10000

# Performance Configuration
EXPO_PUBLIC_MAX_CONCURRENT_OCR_TASKS=2
EXPO_PUBLIC_ENABLE_FRAME_SKIPPING=true
EXPO_PUBLIC_ENABLE_IMAGE_COMPRESSION=true
EXPO_PUBLIC_MAX_IMAGE_SIZE=2048

# Camera Configuration  
EXPO_PUBLIC_CAMERA_HIGH_QUALITY=true
EXPO_PUBLIC_CAMERA_STABILIZATION=true
EXPO_PUBLIC_CAMERA_PIXEL_FORMAT=yuv
EXPO_PUBLIC_CAMERA_COMPRESSION_QUALITY=0.9

# Feature Flags
EXPO_PUBLIC_ENABLE_REALTIME_OCR=true
EXPO_PUBLIC_ENABLE_AUTO_TRANSACTION_CREATION=true
EXPO_PUBLIC_ENABLE_RECEIPT_STORAGE=true
EXPO_PUBLIC_ENABLE_DEBUG_MODE=false

# API Configuration
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_SYNC_INTERVAL=60000

# Debugging
EXPO_PUBLIC_ENABLE_LOGGING=false
EXPO_PUBLIC_ENABLE_METRICS_DISPLAY=false

# Security
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_SESSION_TIMEOUT=3600000

# Analytics
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ANALYTICS_API_KEY=your_analytics_api_key

# Push Notifications
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_NOTIFICATION_SOUND=default
